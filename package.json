{
  "name": "persuader",
  "version": "0.8.2",
  "type": "module",
  "description": "Session-based LLM orchestration with validation-driven retry loops and guaranteed schema-adhering output.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "persuader": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "require": "./dist/cli.cjs",
      "import": "./dist/cli.mjs"
    }
  },
  "scripts": {
    "build": "unbuild",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx watch src/cli/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "npm run typecheck && npm run lint",
    "check:fix": "npm run lint:fix && npm run format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "example:fitness": "tsx examples/fitness-analysis/index.ts",
    "example:fitness:compare": "tsx examples/fitness-analysis/examples/compare-perspectives.ts",
    "example:yoga": "tsx examples/yoga/index.ts",
    "example:yoga-advanced": "tsx examples/yoga-advanced/index.ts",
    "example:exercise": "tsx examples/exercise/index.ts",
    "example:workout": "tsx examples/workout-generator/index.ts",
    "example:workout:optimized": "tsx examples/workout-generator/optimized.ts",
    "example:openai": "tsx examples/openai-test/index.ts",
    "example:ollama": "tsx examples/ollama-local/index.ts",
    "example:gemini": "tsx examples/gemini-analysis/index.ts",
    "example:anthropic": "tsx examples/anthropic-music/index.ts",
    "example:enhancement": "tsx examples/enhancement-rounds/index.ts"
  },
  "keywords": [
    "llm",
    "ai",
    "zod",
    "validation",
    "pipeline",
    "orchestration",
    "typescript",
    "session-based",
    "batch-processing",
    "data-enrichment",
    "type-safe"
  ],
  "author": "Conor Luddy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conorluddy/Persuader.git"
  },
  "bugs": {
    "url": "https://github.com/conorluddy/Persuader/issues"
  },
  "homepage": "https://github.com/conorluddy/Persuader#readme",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@inquirer/prompts": "^7.8.6",
    "@types/diff": "^7.0.2",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "diff": "^8.0.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2",
    "unbuild": "^3.6.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.30",
    "@anthropic-ai/sdk": "^0.62.0",
    "@google/genai": "^1.0.0",
    "ai": "^5.0.44",
    "ajv": "^8.17.1",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "consola": "^3.4.2",
    "dotenv": "^17.2.2",
    "fast-glob": "^3.3.3",
    "ora": "^8.2.0",
    "zod": "^4.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "zod": "^4.1.8"
  },
  "resolutions": {
    "zod": "^4.1.8"
  }
}
